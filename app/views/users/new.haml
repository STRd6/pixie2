- content_for :javascript do
  :coffeescript
    $ ->
      invalidChars = /[^A-Za-z0-9_-]/g

      addWarnings = (element) ->
        element.tipsy
          gravity: 'w'
          trigger: 'manual'
          title: 'tip'

        element.tipsy 'show'
        element.css
          border: '1px solid red'

      removeWarnings = (element) ->
        element.tipsy 'hide'
        element.css
          border: '1px solid rgb(170, 170, 170)'

      $('#user_display_name').bind 'blur keyup paste', (e) ->
        $this = $(this)

        val = $this.val()

        if val.match invalidChars
          addWarnings $this

        newVal = val.replace(invalidChars, '')

        unless newVal is val
          $this.val(newVal)

= form_for user, :html => { :class => "module" } do |form|
  = form.error_messages
  %h2 Sign up for Pixie!

  %label
    %h3 Display Name
    = form.text_field :display_name, :"tip" => 'Display name must only use upper and lower case letters, numbers, or hyphens and underscores.'
  %label
    %h3 Email Address
    = form.text_field :email
  %label
    %h3 Password
    = form.password_field :password

  %button.btn.full Sign Up
